@using IndianRestaurant.Models
@model Item

@{
    ViewBag.Title = "ItemDetails";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="col-md-offset-1 col-md-11">
    <table class="ttable">
        <tr>
            <td>
                <div class="col-md-offset-4 col-md-4"><h2 class="ttable-header">@Model.Name   <br/>$ @Model.Price</h2> </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="row">
                    <div class="col-md-offset-2 col-md-8">
                        <div class="thumbnail">
                            <img src="~/Assest/Uploads/Originals/@Model.OriginalImageUrl" alt="@Model.Name">
                            </div>
                        
                          <p class="ttable-header">
                                @Model.Description
                            </p>
                        
                        </div>
                        </div>
</td>
        </tr>
       
    </table>
</div>
